<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<cwp:plugin url="~./org/carewebframework/vista/ui/context/encounter/encounterHeader.zul"
			id="encounterHeader" name="Current Encounter Header">
			<cwp:serialization>
				<cwp:property name="Background Color" id="color" type="color"
					description="Sets the background color." />
			</cwp:serialization>
		</cwp:plugin>

		<cwp:plugin url="~./org/carewebframework/vista/ui/context/location/locationHeader.zul"
			id="locationHeader" name="Current Location Header">
			<cwp:serialization>
				<cwp:property name="Background Color" id="color" type="color"
					description="Sets the background color." />
			</cwp:serialization>
		</cwp:plugin>

	</beans>

	<beans profile="desktop">

		<bean id="encounterHeaderController" class="org.carewebframework.vista.ui.context.encounter.EncounterHeader"
			scope="prototype" />

		<bean id="locationHeaderController" class="org.carewebframework.vista.ui.context.location.LocationHeader"
			scope="prototype" />

	</beans>
</beans>