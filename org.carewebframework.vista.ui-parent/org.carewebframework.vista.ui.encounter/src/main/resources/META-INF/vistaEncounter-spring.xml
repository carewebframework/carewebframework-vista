<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<cwp:plugin url="~./org/carewebframework/vista/ui/encounter/encounterHeader.zul"
			id="encounterHeader" name="Current Encounter Header">
			<cwp:serialization>
				<cwp:property name="Background Color" id="color" type="color"
					description="Sets the background color." />
			</cwp:serialization>
		</cwp:plugin>

	</beans>

	<beans profile="desktop">

		<bean id="encounterAbstractSelector" abstract="true">
			<property name="encounterSearch" ref="encounterSearchEngine" />
			<property name="practitionerSearch" ref="practitionerSearchEngine" />
		</bean>
		
		<bean id="encounterOutpatientSelector" 
			parent="encounterAbstractSelector"
			class="org.carewebframework.vista.ui.encounter.OutpatientSelector"
			scope="prototype" />

		<bean id="encounterInpatientSelector" 
			parent="encounterAbstractSelector"
			class="org.carewebframework.vista.ui.encounter.InpatientSelector"
			scope="prototype" />

		<bean id="encounterNewSelector" 
			parent="encounterAbstractSelector"
			class="org.carewebframework.vista.ui.encounter.NewSelector"
			scope="prototype" />

		<bean id="encounterSelectionController" class="org.carewebframework.vista.ui.encounter.MainController"
			scope="prototype" />

		<bean id="encounterHeaderController" class="org.carewebframework.vista.ui.encounter.EncounterHeader"
			scope="prototype" />

	</beans>
</beans>