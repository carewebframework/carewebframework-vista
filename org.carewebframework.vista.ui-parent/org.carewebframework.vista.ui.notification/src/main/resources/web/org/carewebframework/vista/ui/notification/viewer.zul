<?taglib uri="http://www.carewebframework.org/tld/core" prefix="rc"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window mode="overlapped" width="500px"
		apply="${vistaNotificationViewerController}" visible="false"
		position="center">
		<caption id="caption" label="${labels.vistanotification.viewer.title}" style="font-weight:bold"/>
		<vlayout hflex="1">
			<label id="lblHeader" style="font-weight:bold" />
			<textbox id="txtMessage" readonly="true" multiline="true"
				vflex="1" hflex="1" height="200px"/>
			<div style="text-align:center; color:blue; background-color:lightyellow">
				${labels.vistanotification.viewer.action.select}
			</div>
			<toolbar align="center" style="border-top: 1px solid lightgray">
				<button id="btnDelete" label="${labels.vistanotification.viewer.button.delete.label}" />
				<button id="btnSkip" label="${labels.vistanotification.viewer.button.skip.label}" />
				<button id="btnCancel" label="${labels.vistanotification.viewer.button.cancel.label}" />
				<button id="btnDeleteAll" label="${labels.vistanotification.viewer.button.deleteall.label}" />
				<button id="btnSkipAll" label="${labels.vistanotification.viewer.button.skipall.label}" />
				<button id="btnView" label="${labels.vistanotification.viewer.button.view.label}" />
			</toolbar>
		</vlayout>
	</window>
</zk>