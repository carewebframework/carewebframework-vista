<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<cwp:plugin id="vistaVitalsDisplay" name="Vital Measurement Display"
			url="~./org/carewebframework/vista/plugin/vitals/display.zul">
		</cwp:plugin>
		
		<!-- Not yet implemented
		<cwp:plugin id="vistaVitalsEntry" name="Vital Measurement Entry"
			url="~./org/carewebframework/vista/plugin/vitals/entry.zul">
		</cwp:plugin>
		-->

	</beans>

	<beans profile="desktop">

		<bean id="vistaVitalsDisplayController" class="org.carewebframework.vista.plugin.vitals.DisplayController"
			scope="prototype" />

		<bean id="vistaVitalsEntryController" class="org.carewebframework.vista.plugin.vitals.EntryController"
			scope="prototype" />

	</beans>
	
</beans>
