<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<beans profile="root">

		<bean id="securityService" class="org.carewebframework.vista.security.impl.SecurityServiceImpl">
			<property name="logoutTarget" value="${org.carewebframework.security.logout.url:}" />
			<property name="canChangePassword" value="${org.carewebframework.security.password.can.change:true}" />
		</bean>

		<bean id="securityAuthenticationProvider" class="org.carewebframework.vista.security.base.BaseAuthenticationProvider" />
	
		<!-- Controllers -->
		<bean id="loginPaneController" class="org.carewebframework.vista.security.impl.LoginPaneController"
			scope="prototype">
			<property name="securityService" ref="securityService" />
			<property name="brokerSession" ref="brokerSession" />
		</bean>

		<bean id="loginWindowController" class="org.carewebframework.vista.security.impl.LoginWindowController"
			scope="prototype" />

		<bean id="changePasswordController" class="org.carewebframework.vista.security.impl.ChangePasswordController"
			scope="prototype">
			<property name="securityService" ref="securityService" />
		</bean>

	</beans>
</beans>